# Visual Elements Orchestrator Configuration

# ============================================================================
# AI Service URLs
# ============================================================================

# Chart AI Service (Analytics Microservice v3.0)
# Production: https://analytics-v30-production.up.railway.app
# Local: http://localhost:8080
CHART_SERVICE_URL=https://analytics-v30-production.up.railway.app

# Diagram AI Service (Diagram Generator v3.0)
# Production: https://web-production-e0ad0.up.railway.app
# Local: http://localhost:8080
DIAGRAM_SERVICE_URL=http://localhost:8080

# Text & Table AI Service (Text Table Builder v1.2)
# Production: https://web-production-5daf.up.railway.app
# Local: http://localhost:8000
TEXT_TABLE_SERVICE_URL=http://localhost:8000

# Image AI Service (Image Builder v2.0)
# Production: https://web-production-1b5df.up.railway.app
# Local: http://localhost:8000
IMAGE_SERVICE_URL=http://localhost:8000

# Infographic AI Service (Illustrator v1.0)
# Production: https://illustrator-v10-production.up.railway.app
# Local: http://localhost:8000
INFOGRAPHIC_SERVICE_URL=http://localhost:8000

# Layout Service (Deck Builder v7.5)
# Production: https://web-production-f0d13.up.railway.app
# Local: http://localhost:8504
LAYOUT_SERVICE_URL=http://localhost:8504

# ============================================================================
# Timeout Settings
# ============================================================================

# Default service call timeout in seconds
SERVICE_TIMEOUT=30.0

# Diagram service uses async polling - longer timeout
DIAGRAM_POLL_TIMEOUT=60.0

# Image generation can take longer
IMAGE_TIMEOUT=60.0

# ============================================================================
# Server Configuration
# ============================================================================

# Host to bind to
HOST=0.0.0.0

# Port to listen on
PORT=8090

# ============================================================================
# CORS Configuration
# ============================================================================

# Comma-separated list of allowed origins
# Use ["*"] for development, specific origins for production
CORS_ORIGINS=["*"]

# ============================================================================
# Logging
# ============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
